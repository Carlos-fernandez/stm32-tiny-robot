{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "cmake --build .",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Build the STM32G491RE project."
		},
		{
			"label": "Flash",
			"type": "shell",
			"command": "openocd -f scripts/openocd/interface_stlink.cfg -f scripts/openocd/target_stm32g4x.cfg -c \"program build/your_project.elf verify reset exit\"",
			"group": "build",
			"problemMatcher": [],
			"detail": "Flash the firmware to the STM32G491RE using OpenOCD."
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "cmake --build . --target clean",
			"group": "build",
			"problemMatcher": [],
			"detail": "Clean the build directory."
		},
		{
			"label": "Build (Debug)",
			"type": "shell",
			"command": "cmake --build build/debug",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Build (Debug)",
			"type": "shell",
			"command": "cmake --build build/debug",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Build (HAL)",
			"type": "shell",
			"command": "cmake --preset=debug && cmake --build build/debug",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Rebuild (HAL)",
			"type": "shell",
			"command": "cmake --build build/debug",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "Rebuild (HAL) 2",
			"type": "shell",
			"command": "cmake --build build/debug",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}